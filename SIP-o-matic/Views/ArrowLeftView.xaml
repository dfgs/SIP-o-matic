<UserControl x:Class="SIP_o_matic.Views.ArrowLeftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIP_o_matic.Views"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
	

	<DockPanel Height="15" VerticalAlignment="Center">
		<Path Width="15" DockPanel.Dock="Left" Stroke="{Binding ElementName=root,Path=Foreground}" Fill="{Binding ElementName=root,Path=Foreground}" Data="M15,0 L15,15 L0,7.5 Z" />
		<Rectangle Fill="{Binding ElementName=root,Path=Foreground}" Height="2" />
	</DockPanel>
</UserControl>
