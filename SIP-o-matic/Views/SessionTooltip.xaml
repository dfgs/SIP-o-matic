<UserControl x:Class="SIP_o_matic.Views.SessionTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:SIP_o_matic.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Grid.IsSharedSizeScope="True">
		<views:PropertyView Header="Start time" Text="{Binding StartTime}"/>
		<views:PropertyView Header="Stop time" Text="{Binding StopTime}"/>
		<views:PropertyView Header="Codec" Text="{Binding Codec}"/>
		<views:PropertyView Header="Source" Text="{Binding SourceAddress}"/>
		<views:PropertyView Header="Destination" Text="{Binding DestinationAddress}"/>
		<views:PropertyView Header="Source port" Text="{Binding SourcePort}"/>
		<views:PropertyView Header="Destination port" Text="{Binding DestinationPort}"/>
	</StackPanel>
</UserControl>
