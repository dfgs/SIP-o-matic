<UserControl x:Class="SIP_o_matic.Views.MessagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:SIP_o_matic.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="5"/>
			<ColumnDefinition Width="600"/>
		</Grid.ColumnDefinitions>

		<views:LadderView Grid.Column="0" Devices="{Binding Devices}" ItemsSource="{Binding Messages}" >
			<views:LadderView.ItemTemplate>
				<DataTemplate>
					<views:MessageView Margin="0,0,0,16"/>
				</DataTemplate>
			</views:LadderView.ItemTemplate>
			<views:LadderView.ItemToolTip>
				<StackPanel>
					<views:SIPMessageTooltip DataContext="{Binding SIPMessage}"/>
				</StackPanel>
			</views:LadderView.ItemToolTip>
		</views:LadderView>

		<GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

		<views:SIPMessageTooltip Grid.Column="2" Margin="8" DataContext="{Binding Messages.SelectedItem.SIPMessage}"/>
	</Grid>

</UserControl>
