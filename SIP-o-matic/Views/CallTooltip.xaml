<UserControl x:Class="SIP_o_matic.Views.CallTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:SIP_o_matic.Views"
             mc:Ignorable="d" >
	<StackPanel Grid.IsSharedSizeScope="True">
		<views:PropertyView Header="Status" Text="{Binding Status}"/>
		<views:PropertyView Header="Start time" Text="{Binding StartTime}"/>
		<views:PropertyView Header="Stop time" Text="{Binding StopTime}"/>
		<views:PropertyView Header="From" Text="{Binding From}"/>
		<views:PropertyView Header="To" Text="{Binding To}"/>
		<views:PropertyView Header="Call ID" Text="{Binding CallID}"/>
	</StackPanel>
</UserControl>
