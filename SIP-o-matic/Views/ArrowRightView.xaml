<UserControl x:Class="SIP_o_matic.Views.ArrowRightView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIP_o_matic.Views"
             mc:Ignorable="d" 
             d:DesignWidth="800">
	<UserControl.Resources>
		<SolidColorBrush x:Key="color" Color="#555555"/>
	</UserControl.Resources>

	<DockPanel Height="15" VerticalAlignment="Center">
		<Path Width="15" DockPanel.Dock="Right" Stroke="{StaticResource color}" Fill="{StaticResource color}" Data="M0,0 L15,7.5 L0,15 Z" />
		<Rectangle Fill="{StaticResource color}" Height="2" />
	</DockPanel>
</UserControl>
